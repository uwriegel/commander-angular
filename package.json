{
    "name": "commander",
    "version": "1.0.0",
    "main": "electron/dist/main.js",
    "scripts": {
        "electron": "ng build --base-href ./ && tsc --p electron && electron .",
        "electron-debug": "electron --inspect=5858 .",
        "ng": "ng",
        "start1": "ng serve",
        "start": "electron .",
        "dist": "build -w --x64 --ia32",
        "build": "ng build --base-href --prod",
        "mainbuild": "tsc --p electron",
        "lint": "ng lint"
    },
    "private": true,
    "author": "Uwe Riegel",
    "description": "A Norton Commander like program to manage files and directories",
    "build": {
        "appId": "de.hotmail.uriegel.commander",
        "copyright": "Copyright Â© 2019 Uwe Riegel",
        "productName": "Commander",
        "electronVersion": "5.0.0",
        "win": {
            "target": [
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        }
    },
    "dependencies": {
        "@angular/animations": "^7.2.14",
        "@angular/common": "^7.2.14",
        "@angular/compiler": "^7.2.14",
        "@angular/core": "^7.2.14",
        "@angular/forms": "^7.2.14",
        "@angular/platform-browser": "^7.2.14",
        "@angular/platform-browser-dynamic": "^7.2.14",
        "@angular/router": "^7.2.14",
        "bindings": "~1.2.1",
        "core-js": "^2.5.4",
        "electron-settings": "^3.2.0",
        "extension-fs": "^1.0.3",
        "node-addon-api": "*",
        "rxjs": "~6.3.3",
        "tslib": "^1.9.0",
        "zone.js": "~0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.13.0",
        "@angular/cli": "~7.3.8",
        "@angular/compiler-cli": "^7.2.14",
        "@angular/language-service": "^7.2.14",
        "@types/jasmine": "~2.8.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "~4.5.0",
        "electron": "^5.0.1",
        "electron-builder": "^20.39.0",
        "electron-rebuild": "^1.8.4",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~4.0.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~1.1.2",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.4.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.11.0",
        "typescript": "~3.2.2"
    }
}
